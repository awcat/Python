
from random import randint
random_number = randint(1, 10)

t = 3
c = int(input("Your guess: "))
while t > 0:
  if c == random_number:
    print ("Ok")
    break
    t -= 1
  else:
    print ('You lose!')
    break
print (random_number)
  
  
